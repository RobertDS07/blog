---
import Button from "@ui/atoms/Button/Button";
import Icon from "@ui/atoms/Icon/Icon";

import FeedbackCard from "@ui/molecules/FeedbackCard/FeedbackCard.astro";

import type Props from "./feedbacksSection.interface";

const { feedbacks } = Astro.props;
---

<section class="flex flex-col gap-8">
  <div class="flex justify-between">
    <h2
      class="w-auto self-center text-2xl font-bold text-white-500 xs:text-3xl"
    >
      Feedbacks
    </h2>

    <Button
      as="a"
      class="text-xs xs:text-sm"
      linkProps={{ href: "/feedbacks" }}
    >
      Show more

      <Icon type="heart" class="hidden xs:block" />
    </Button>
  </div>

  {
    feedbacks.map((feedback) => (
      <FeedbackCard
        name={feedback.name}
        feedback={feedback.feedback}
        photoSrc={feedback.photoSrc}
        socialMediaData={feedback.socialMediaData}
      />
    ))
  }
</section>
