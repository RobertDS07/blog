---
import Button from "@ui/atoms/Button/Button";
import Icon from "@ui/atoms/Icon/Icon";

import ArticleCard from "@ui/molecules/ArticleCard/ArticleCard.astro";

import type Props from "./articlesSection.interface";

const { articles } = Astro.props;
---

<section class="flex flex-col gap-8">
  <div class="flex justify-between">
    <h2
      class="w-auto self-center text-2xl font-bold text-white-500 xs:text-3xl"
    >
      Articles
    </h2>

    <Button as="a" class="text-xs xs:text-sm" linkProps={{ href: "/blog" }}>
      Show more

      <Icon type="paper" class="hidden xs:block" />
    </Button>
  </div>

  {articles.map((article) => <ArticleCard {...article} />)}
</section>
