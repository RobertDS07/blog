---
import Button from "@ui/atoms/Button/Button";

import ArticleCard from "@ui/molecules/ArticleCard/ArticleCard.astro";

import type InternalProps from "./articlesSection.interface";

type Props = InternalProps;

const { articles } = Astro.props;
---

<section class="flex flex-col gap-8">
  <div class="flex justify-between">
    <h2 class="text-3xl font-bold text-white-500">Latest Articles</h2>

    <Button
      as="a"
      class="text-sm"
      withIcon={{ type: "paper" }}
      linkProps={{ href: "/blog" }}
    >
      Show more
    </Button>
  </div>

  {
    articles.map((article) => (
      <ArticleCard summary={article.summary} title={article.title} />
    ))
  }
</section>
