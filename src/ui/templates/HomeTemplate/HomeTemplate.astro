---
import BaseLayout from "@ui/layouts/BaseLayout/BaseLayout.astro";

import ArticlesSection from "@ui/organisms/ArticlesSection/ArticlesSection.astro";
import FeedbacksSection from "@ui/organisms/FeedbacksSection/FeedbacksSection.astro";

import type Props from "./homeTemplate.interface";

const { articles, feedbacks } = Astro.props;
---

<BaseLayout
  selectedNavLink="HOME"
  pageTitle="Robert Damaceno"
  meta={{
    description:
      "I'm fullstack software engineer, set in great challenges since my first day of work",
    tags: [
      "Blog",
      "Desenvolvedor",
      "Developer",
      "Desenvolvimento de Software",
      "Programação",
      "Desenvolvimento Web",
      "Desenvolvimento Mobile",
      "Front-end",
      "Back-end",
      "Full Stack",
      "Banco de Dados",
      "Segurança da Informação",
      "Testes de Software",
      "Metodologias Ágeis",
      "DevOps",
      "Arquitetura de Software",
      "Cloud Computing",
    ],
  }}
>
  <div class="flex flex-col gap-16 py-11 xs:gap-10 md:px-11">
    <div class="flex items-center md:justify-center">
      <div class="flex flex-col gap-4">
        <p class="text-lg text-purple-main xs:text-xl">Olá, meu nome é</p>

        <h1 class="text-xl font-black text-white-500 xs:text-3xl">
          Robert Damaceno Santos.<br />Construindo coisas incríveis na internet.
        </h1>

        <h2 class="text-sm font-bold text-white-500 md:text-base">
          Sou um desenvolvedor fullstack, posto em grandes desafios desde<br
          />meu primeiro dia de emprego.
        </h2>
      </div>
    </div>

    <div class="flex flex-col justify-between gap-16 xl:flex-row [&>*]:flex-1">
      <ArticlesSection articles={articles} />

      <FeedbacksSection feedbacks={feedbacks} />
    </div>
  </div>
</BaseLayout>
