---
import Icon from "@ui/atoms/Icon/Icon";

import type Props from "./articlePreview.interface";

const { backgroundSrc, minutesToRead, summary, title } = Astro.props;
---

<article
  class="flex w-min flex-col overflow-hidden rounded-2xl bg-[#2E2929] shadow-sm shadow-purple-main"
>
  <div class="relative flex min-h-28 w-72 flex-1 items-center justify-center">
    <img
      src={backgroundSrc}
      class="pointer-events-none absolute left-0 top-0 h-full w-full opacity-20"
    />

    <h3
      class="z-10 text-center text-xl font-black text-white-0 shadow-[#ffffff3e] text-shadow-sm xs:text-2xl"
    >
      {title}
    </h3>
  </div>

  <div class="flex flex-1 flex-col gap-2 p-3">
    <p class="text-center text-xs font-medium text-white-0 xs:text-sm">
      {summary}
    </p>

    <div class="flex items-center justify-center gap-1">
      <Icon type="clock" class="w-4 text-purple-main" />
      <span class="text-xs text-white-500">{minutesToRead} min</span>
    </div>
  </div>
</article>
