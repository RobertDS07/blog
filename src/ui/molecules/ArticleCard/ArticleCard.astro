---
import BaseCard from "../BaseCard/BaseCard.astro";
import type Props from "./articleCard.interface";

const { summary, title } = Astro.props;
---

<BaseCard>
  <div class="flex flex-col gap-4 text-white-50">
    <h3 class="text-xl font-bold xs:text-2xl">{title}</h3>

    <p class="text-xs font-medium">{summary}</p>
  </div>
</BaseCard>
