{
  "extends": ["prettier", "eslint:recommended", "plugin:astro/recommended"],
  "plugins": ["prettier", "eslint-plugin-jsx-a11y", "eslint-plugin-import-helpers"],
  "ignorePatterns": ["node_modules/", "dist/", "public/", "*.mjs"],
  "overrides": [
    {
      "files": ["*.astro"],
      "plugins": ["astro"],
      "env": {
        "node": true,
        "astro/astro": true,
        "es2020": true
      },
      "parser": "astro-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "extraFileExtensions": [".astro"],
        "sourceType": "module"
      },
      "rules": {
        "astro/no-conflict-set-directives": "error",
        "astro/no-unused-define-vars-in-style": "error"
      }
    },
    {
      "files": ["**/*.astro/*.js", "*.astro/*.js"],
      "env": {
        "browser": true,
        "es2020": true
      },
      "parserOptions": {
        "sourceType": "module"
      }
    },
    {
      "files": ["*"],
      "rules": {
        "import-helpers/order-imports": [
          "warn",
          {
            "newlinesBetween": "always",
            "alphabetize": { "order": "asc", "ignoreCase": true },
            "groups": [
                "/^@astrojs/",
                "module",
                "/^src/",
                "/^@pages/",
                "/^@ui/layouts/",
                "/^@ui/templates/",
                "/^@ui/atoms/",
                "/^@ui/molecules/",
                "/^@ui/organisms/",
                "/^@css/",
                ["parent", "sibling", "index"]
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "env": {
        "node": true,
        "es2020": true
      },
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
      },
      "rules": {
        "prettier/prettier": "error"
      }
    },
    {
      "files": ["*.cjs"],
      "env": {
        "node": true,
        "es2020": true
      }
    }
  ]
}
